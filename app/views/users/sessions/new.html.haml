
.signupwra
  .title
    .title__content
  .form
    %h2#login LoginLogin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource ,class: 'error'
      .form__field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",required: true,class:'input'
      .form__field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password",required: true,class:'input'
      - if devise_mapping.rememberable?
        .form__field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log in",class:'save'

