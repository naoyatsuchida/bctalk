.group
  =render partial: 'user/side'
  .group__content
    %h3{class:'title'} グループチャットEDIT
    .group__content__box
      =form_for @group do |f|
        .group__content__box__text
          = f.label :name 
          = f.text_field :name,id: 'group_name', class: "group__content__box__text__title", placeholder: "グループ名を入力してください"
  
 
        = f.submit "Save", class: "group__content__box__menber__save"