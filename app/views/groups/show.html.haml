.groupmessage
  =render partial: 'user/side'
  .contents
    .title
      .left
        %p.left__group 
          = @group.name 
        =link_to menber_group_path(@group.id) do
          %p.left__member 
            %span membar:
            =@group.users.count
      .right
        =link_to '一覧' ,messages_path
 
    .contents__main
      .messages
        = render partial: @message
      

    .contents__footer
      = form_with url:group_message_path,local: true do |f|
        .input
          = f.text_field :message, placeholder: "type a message",class: "input__text" 
          = f.label :image, class: "input__label"  do
            %i.fa.fa-image
            = f.file_field :image,class: "input__image"
        = f.submit "Send",class: "input__submit"