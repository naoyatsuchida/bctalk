.groupmessage
  =render partial: 'user/side'
  .contents
    .title
      .left
        %p.left__group 
          = @group.name 
        =link_to menber_group_path(@group.id) do
          %p.left__member 
            %span membar:
            =@group.users.count
      .right
        =link_to '一覧' ,groups_path
 
    .contents__main
      .messages
        = render partial: @message
      

    .contents__footer
      = form_for [@group, @message],local: true do |f|
        .input
          = f.text_field :content, placeholder: "type a message",class: "input__text" 
          = f.label :submit do
            %i.fas.fa-paper-plane.icon 
            = f.submit class: "input__submit" ,id:'message_submit'